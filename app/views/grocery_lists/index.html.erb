<h>This is your grocery list</h>
<br>
<table>
  <thead>
    <tr>
      <th>Name of list</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @grocery_lists.each do |list| %>
      <tr>
        <td><%= link_to list.name, grocery_list_product_path(@grocery_lists)  %></td>
        <td><%= list.date %></td>
        <td><%= link_to "Edit title list", edit_grocery_list_path(current_user) %></td>
        <td><%= link_to "Delete list", grocery_list_path(current_user), method: :delete, data: { confirm: 'Are you sure you want to delete?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
