<% if user_signed_in? %>

<% if current_user.superadmin_role? %>
<%= link_to "Admin", "https://whispering-atoll-46703.herokuapp.com/admin",target: :_blank %>
<% end %>

<!DOCTYPE html>
<html>
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>

<body>
    <div class="team-grid">
        <div class="container">
            <div class="intro">
                <h2 class="text-center">Don't have a list? Let's make one now.</h2>
                <p class="text-center">Or head over to the category to check out what's in store.</p>
            </div>
            <div class="row blocks">
                <div class="col-md-4 col-lg-3 item">
                    <div class="box">
                      <!-- <div class="box" style="background-image:url('/assets/list 2.png')"> -->
                        <div class="cover">
                            <h3 class="name"><%= link_to 'CREATE A GROCERY LIST', new_grocery_list_path %></h3>
                            <p class="title">Load em' up</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 col-lg-3 item">
                    <div class="box">
                        <div class="cover">
                            <h3 class="name"><%= link_to 'MY GROCERY LIST', grocery_lists_path %></h3>
                            <p class="title">Stash full of wonders</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 col-lg-3 item">
                    <div class="box">
                        <div class="cover">
                            <h3 class="name"><%= link_to 'CATEGORY', categories_path %></h3>
                            <p class="title">Choose products from here</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 col-lg-3 item">
                    <div class="box">
                        <div class="cover">
                            <h3 class="name"><%= link_to 'SCAN ME', "https://stockzitup.glitch.me/", target: :_blank %></h3>
                            <p class="title">Scan QR to show an interactive map of our store</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.1.3/js/bootstrap.bundle.min.js"></script>
</body>

</html>

<% end %>
