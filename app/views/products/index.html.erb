<p>List of products</p>

<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Description</th>
      <th>Price per unit (RM)</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><% if product.images.attached? %>
              <% product.images.each do |image| %>
                <%= image_tag image, width: 100 %>
              <% end %>
                <% else %>
                Unavailable
        <% end %></td>

        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td><%= product.category.heading %></td>

        <td><%= form_with model: product.grocery_list_products.build do |f| %></td>
        <td><%#= form_with model: @grocery_list_product do |f| %></td>

        <td><%= f.hidden_field :product_id, value: product.id %></td>
        <td><%= f.number_field :quantity, value: 1, min: 1 %></td>
        <td><%= f.label :grocery_list %></td>
        <td><%= f.select :grocery_list_id, options_from_collection_for_select(GroceryList.all, :id, :name), { :prompt => "--Select one--"} %></td>
        <td><%= f.submit "Add to my list" %></td>

        <% if current_user.superadmin_role? %>
        <td><%= link_to "Update product", edit_product_path(product) %></td>
        <td><%= link_to "Delete product", product_path(product), method: :delete, data: { confirm: 'Are you sure you want to delete?' } %></td>
        <% end %>
      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>

<%# else %>

<!-- <p>Visible only for superadmin</p> -->

<%# end %>
